		</choice>
		<flow-ref doc:name="process-payment" doc:id="633c3e58-a2d3-4e1c-b687-3dff8286d35b" name="subflow-process-paymentSub_Flow"/>
		<flow-ref doc:name="process-booking" doc:id="24dd73c4-cc94-423a-a360-be9c53d00e5a" name="subflow-process-bookingSub_Flow"/>
	</flow>
</mule>
